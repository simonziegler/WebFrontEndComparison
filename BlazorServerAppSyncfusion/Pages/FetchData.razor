@page "/fetchdata"
@using CSharpSharedData
@using Syncfusion.Blazor.Grids

@inherits TimedComponentBase

<PageTitle>Weather forecast</PageTitle>

<SfGrid DataSource="@forecasts" AllowGrouping="true" Height="400">
	<GridColumns>
		<GridColumn Field=@nameof(WeatherForecast.LastRendered) AllowGrouping=@false></GridColumn>
		<GridColumn Field=@nameof(WeatherForecast.Date) AllowGrouping=@false></GridColumn>
		<GridColumn Field=@nameof(WeatherForecast.TemperatureC) AllowGrouping=@false></GridColumn>
		<GridColumn Field=@nameof(WeatherForecast.TemperatureF) AllowGrouping=@false></GridColumn>
		<GridColumn Field=@nameof(WeatherForecast.Summary) AllowGrouping=@true></GridColumn>
	</GridColumns>
</SfGrid>